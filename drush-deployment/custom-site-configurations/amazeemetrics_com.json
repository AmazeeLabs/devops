{
    "servers": {
        "dev": {
            "remote-host": "dev1.compact.amazee.io",
            "remote-environment": "amazee.io",
            "remote-user": "amazeemetrics_com_dev",
            "root": "/var/www/amazeemetrics_com_dev/public_html",
            "uri": "http://$siteurl.dev.dev1.compact.amazee.io",
            "deploy-via": "Pull",
            "branch": "dev",
            "after": {
                "deploy-update-code": [
                    "deploy_gulp_compile_task",
                    "deploy_cache_css_js_task"
                ]
            }
        },
        "prod": {
            "remote-host": "us1.compact.amazee.io",
            "remote-environment": "amazee.io",
            "remote-user": "amazeemetrics_com_live",
            "root": "/var/www/amazeemetrics_com_live/public_html",
            "uri": "http://www.amazeemetrics.com",
            "after": {
                "deploy-update-code": [
                    "deploy_gulp_build_task",
                    "deploy_cache_css_js_task"
                ]
            }
        }
    }
}